.token.comment,
.token.prolog,
.token.cdata
	color grey

.token.delimiter,
.token.boolean,
.token.keyword,
.token.selector,
.token.important,
.token.atrule,
.token.property,
.token.constant,
.token.variable
	color red-bright

.token.operator,
.token.punctuation,
.token.attr-name,
.token.attr-value,
.token.attr-value .punctuation
	color white

.token.tag,
.token.tag .punctuation,
.token.doctype,
.token.builtin
.token.function
	color yellow-bright

.token.entity,
.token.number,
.token.symbol
	color magenta-bright

.token.string,
.token.char
	color green-bright

.token.url
	color green-bright
	text-decoration underline

.token.regex
	background green-bright

.token.inserted
	background white

.token.deleted
	background red-bright

.token.bold
	font-weight bold

.token.italic
	font-style italic
