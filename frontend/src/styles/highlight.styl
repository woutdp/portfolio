@import "variables.styl"

default =
	font-family Consolas Monaco "Andale Mono" monospace
	text-align left
	white-space pre
	word-spacing normal
	word-break normal
	word-wrap normal
	hyphens none
	color inherit
	text-shadow none
	font-size 0.9em
	line-height 1.3em
	padding 0

	-moz-tab-size 4
	-o-tab-size 4
	tab-size 4

	-webkit-hyphens none
	-moz-hyphens none
	-ms-hyphens none
	hyphens none

selection =
	color #fff
	background: #f05e23;

codePre = 'code, pre'
selectionSelectors = '&::-moz-selection, & ::-moz-selection, &::selection, & ::selection'
{codePre}
	&[class*="language-"]
		{default}
		{selectionSelectors}
			{selection}

pre
	&[class*="language-"]
		background-color black
		border-radius 5px
		color foreground
		margin 1em 0
		overflow auto
		padding 1.25em 1.25em
		position relative
		box-shadow 8px 8px 0 darken(@background-color, 20%)
		border 1px dashed white

	& > code
		&[class*="language-"]
			background none

code
	font-family Consolas Monaco "Andale Mono" monospace
	font-size calc(1em - 2px)
	background-color black
	color shade(foreground, 10%)
	padding 0.2em 0.4em
	border-radius 2px
	white-space nowrap

